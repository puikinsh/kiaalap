---
layout: base
pageSpecificStyles: |
  /* Modal Examples Styling */
  .demo-section {
      background: #f8f9fa;
      border: 2px dashed #dee2e6;
      border-radius: 8px;
      padding: 2rem;
      text-align: center;
      margin: 1.5rem 0;
  }

  .student-card {
      border: 1px solid #dee2e6;
      border-radius: 8px;
      padding: 1rem;
      margin-bottom: 1rem;
      transition: all 0.2s ease;
      cursor: pointer;
  }

  .student-card:hover {
      box-shadow: 0 4px 8px rgba(0,0,0,0.1);
      transform: translateY(-2px);
  }

  .student-avatar {
      width: 48px;
      height: 48px;
      border-radius: 50%;
      object-fit: cover;
  }

  .status-badge {
      padding: 0.25rem 0.75rem;
      border-radius: 20px;
      font-size: 0.75rem;
      font-weight: 500;
  }
---

<!-- Modal Examples Grid -->
