  $(document).ready(function() {
              try {
                  // Initialize line charts
                  $('.line-chart').peity('line', {
                      width: 120,
                      height: 40,
                      fill: 'rgba(54, 162, 235, 0.2)',
                      stroke: '#36a2eb'
                  });
  
                  // Initialize bar charts
                  $('.bar-chart').peity('bar', {
                      width: 120,
                      height: 40,
                      fill: ['#007bff', '#28a745', '#ffc107', '#dc3545']
                  });
  
                  // Initialize pie charts
                  $('.pie-chart').peity('pie', {
                      width: 80,
                      height: 80,
                      fill: ['#007bff', '#28a745', '#ffc107', '#dc3545']
                  });
  
                  // Initialize donut charts
                  $('.donut-chart').peity('donut', {
                      width: 80,
                      height: 80,
                      innerRadius: 20,
                      fill: ['#007bff', '#28a745', '#ffc107', '#dc3545']
                  });
  
                  console.log('All Peity charts initialized successfully');
  
                  // Auto-refresh charts with new data every 5 seconds for demonstration
                  setInterval(function() {
                      $('.line-chart').each(function() {
                          const $this = $(this);
                          const newData = [];
                          for (let i = 0; i < 10; i++) {
                              newData.push(Math.floor(Math.random() * 10) + 1);
                          }
                          $this.text(newData.join(',')).change();
                      });
                  }, 5000);
  
              } catch (error) {
                  console.error('Error initializing Peity charts:', error);
              }
          });
