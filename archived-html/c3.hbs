pageSpecificJS: |
  document.addEventListener('DOMContentLoaded', function() {
              try {
                  // Line Chart
                  var lineChart = c3.generate({
                      bindto: '#lineChart',
                      data: {
                          columns: [
                              ['Students', 30, 200, 100, 400, 150, 250, 300],
                              ['Professors', 50, 20, 10, 40, 15, 25, 50],
                              ['Courses', 100, 150, 80, 200, 120, 180, 220]
                          ],
                          type: 'line'
                      },
                      color: {
                          pattern: ['#007bff', '#dc3545', '#28a745']
                      },
                      grid: {
                          y: {
                              show: true
                          }
                      },
                      point: {
                          r: 4
                      }
                  });
  
                  // Area Chart
                  var areaChart = c3.generate({
                      bindto: '#areaChart',
                      data: {
                          columns: [
                              ['Enrollment', 300, 350, 300, 400, 500, 450, 600],
                              ['Graduates', 130, 100, 140, 200, 150, 180, 250]
                          ],
                          types: {
                              'Enrollment': 'area-spline',
                              'Graduates': 'area-spline'
                          }
                      },
                      color: {
                          pattern: ['#007bff', '#dc3545']
                      },
                      grid: {
                          y: {
                              show: true
                          }
                      }
                  });
  
                  // Bar Chart
                  var barChart = c3.generate({
                      bindto: '#barChart',
                      data: {
                          columns: [
                              ['Computer Science', 120, 140, 160, 180, 200],
                              ['Mathematics', 80, 90, 100, 110, 120],
                              ['Physics', 60, 70, 80, 90, 100]
                          ],
                          type: 'bar'
                      },
                      color: {
                          pattern: ['#007bff', '#dc3545', '#28a745']
                      },
                      bar: {
                          width: {
                              ratio: 0.6
                          }
                      },
                      axis: {
                          x: {
                              type: 'category',
                              categories: ['2019', '2020', '2021', '2022', '2023']
                          }
                      }
                  });
  
                  // Pie Chart
                  var pieChart = c3.generate({
                      bindto: '#pieChart',
                      data: {
                          columns: [
                              ['Undergraduate', 45],
                              ['Graduate', 25],
                              ['PhD', 15],
                              ['Research', 15]
                          ],
                          type: 'pie'
                      },
                      color: {
                          pattern: ['#007bff', '#dc3545', '#28a745', '#ffc107']
                      },
                      pie: {
                          label: {
                              format: function (value, ratio, id) {
                                  return d3.format('.1%')(ratio);
                              }
                          }
                      }
                  });
  
                  // Donut Chart
                  var donutChart = c3.generate({
                      bindto: '#donutChart',
                      data: {
                          columns: [
                              ['Active Students', 350],
                              ['Inactive', 50],
                              ['Alumni', 200],
                              ['Dropouts', 25]
                          ],
                          type: 'donut'
                      },
                      color: {
                          pattern: ['#007bff', '#dc3545', '#28a745', '#ffc107']
                      },
                      donut: {
                          title: "Student Status",
                          label: {
                              format: function (value, ratio, id) {
                                  return value;
                              }
                          }
                      }
                  });
  
                  // Spline Chart
                  var splineChart = c3.generate({
                      bindto: '#splineChart',
                      data: {
                          columns: [
                              ['Academic Performance', 100, 165, 140, 270, 200, 140, 300, 250, 180, 350],
                              ['Attendance Rate', 80, 125, 110, 200, 160, 120, 220, 190, 150, 280]
                          ],
                          type: 'spline'
                      },
                      color: {
                          pattern: ['#007bff', '#dc3545']
                      },
                      grid: {
                          y: {
                              show: true
                          }
                      }
                  });
  
                  console.log('All C3 charts initialized successfully');
              } catch (error) {
                  console.error('Error initializing C3 charts:', error);
              }
          });
